#python
item=int(input("Enter the number of items\n"))
time=float(input("Enter the single item heating time\n"))
if item == 1:
    print(f"The recommended heating time is {'%.2f'%time}")
elif item == 2:
    time=time*1.5
    print(f"The recommended heating time is {'%.2f'%time}")
elif item ==3:
    time=time*2
    print(f"The recommended heating time is {'%.2f'%time}")
else:
    print("Number of items is more")
